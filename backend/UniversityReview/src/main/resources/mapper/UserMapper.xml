<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.neu.review.mapper.UserMapper">
    
    <!-- SELECT by ID -->
    <select id="getUserById" resultType="User">
        SELECT * FROM user WHERE id = #{id}
    </select>

    <!-- INSERT a new User -->
    <insert id="insertUser" parameterType="User">
        INSERT INTO user (username, email, password, addr, tel)
        VALUES (#{username}, #{email}, #{password}, #{address}, #{telephone})
    </insert>
    
    <!-- UPDATE a User -->
    <update id="updateUser" parameterType="User">
        UPDATE user
        SET username = #{username}, email = #{email}, password = #{password}, addr = #{address}, tel = #{telephone}
        WHERE id = #{id}
    </update>
    
    <!-- DELETE a User by ID -->
    <delete id="deleteUserById" parameterType="int">
        DELETE FROM user WHERE id = #{id}
    </delete>
</mapper>
